# Database (для Railway добавь в конец: ?sslmode=require)
DATABASE_URL="postgresql://user:password@localhost:5432/gym_app?schema=public"
# Пример для Railway (публичный URL + SSL):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/railway?sslmode=require"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your_bot_token_from_botfather"
# URL Mini App (HTTPS обязателен) — куда открывается кнопка в боте
WEBAPP_URL="https://your-domain.com/app"

# Telegram group chat IDs (for notifications; bot must be in the group)
# If not set, ADMIN_CHAT_ID is used as fallback
ADMIN_CHAT_ID="your_admin_chat_id"
BOOKINGS_CHAT_ID="-1001234567890"
BAR_ORDERS_CHAT_ID="-1001234567890"
FEEDBACK_CHAT_ID="-1001234567890"

# Server
PORT=3002
FRONTEND_URL="https://your-domain.com"

# JWT для админки (обязательно сменить на релизе)
JWT_SECRET="long-random-secret-change-in-production"
